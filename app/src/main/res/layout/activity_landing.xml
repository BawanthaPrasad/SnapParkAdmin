<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".landing"   >


    <Button
        android:id="@+id/reportBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/main"
        android:drawableLeft="@drawable/sharp_add_alert_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/white"
        android:text="Report"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/addLocationBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/main"
        android:drawableLeft="@drawable/baseline_add_location_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/white"
        android:text="Parkings"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dashboardBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/main"
        android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/white"
        android:text="DashBoard"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>